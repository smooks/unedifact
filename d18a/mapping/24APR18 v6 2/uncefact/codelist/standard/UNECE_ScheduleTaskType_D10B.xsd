<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:clm69675="urn:un:unece:uncefact:codelist:standard:UNECE:ScheduleTaskType:D10B" xmlns:ccts="urn:un:unece:uncefact:documentation:standard:CoreComponentsTechnicalSpecification:2" targetNamespace="urn:un:unece:uncefact:codelist:standard:UNECE:ScheduleTaskType:D10B" elementFormDefault="qualified" attributeFormDefault="unqualified" version="2.1">
<!-- ======================================================================= -->
<!-- ===== Element Declarations                                        ===== -->
<!-- ======================================================================= -->
<!-- ===== Root Element                                                ===== -->
<!-- ======================================================================= -->
  <xsd:element name="ScheduleTaskType" type="clm69675:ScheduleTaskTypeContentType"/>
<!-- ================================================================== -->
<!-- ===== Type Definitions                                       ===== -->
<!-- ================================================================== -->
<!-- ===== Type Definition: ScheduleTaskTypeContentType           ===== -->
<!-- ================================================================== -->
  <xsd:simpleType name="ScheduleTaskTypeContentType">
    <xsd:restriction base="xsd:token">
      <xsd:enumeration value="CM">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>Contractual Milestone</ccts:Name>
            <ccts:Description>A contractual goal that must be accomplished or a key event that must occur for a project.</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="AC">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>Activity</ccts:Name>
            <ccts:Description>An activity is a single atomic unit of work to be accomplished.</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="FA">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>Finish activity</ccts:Name>
            <ccts:Description>Last task in a networked schedule.</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="HAM">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>Hammock</ccts:Name>
            <ccts:Description>This task type is used to create a pseudo-summary over detailed tasks that are not subordinate to this task.</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="MS">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>Milestone</ccts:Name>
            <ccts:Description>A milestone is a specific goal to be accomplished within a project.  Milestones typically have zero duration.</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="SA">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>Start activity</ccts:Name>
            <ccts:Description>First task in a networked schedule.</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="SUM">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>Summary</ccts:Name>
            <ccts:Description>A summary task summarizes detailed subordinate activities.</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
    </xsd:restriction>
  </xsd:simpleType>
</xsd:schema>
